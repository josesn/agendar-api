// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      =  "postgresql://dev_user:devuser@db:5432/scheduling_dev_db" //docker url
}

model User {
  id                Int       @id @default(autoincrement())
  name              String?
  email             String    @unique
  password          String
  staff             Boolean?  @default(false)
  vehicle           Vehicle[]
  scheduling        Scheduling[]
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  @@map("users")
}

model Activity {
  id                Int       @id @default(autoincrement())
  name              String
  scheduling        Scheduling[]
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  @@map("activities")
}

model Vehicle {
  id                Int       @id @default(autoincrement())
  brand             String?
  model             String?
  plate             String    @unique
  color             String?
  year              String?
  user              User?     @relation(fields: [userId], references: [id])
  userId            Int
  scheduling        Scheduling[]
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  @@map("vehicles")
}

model Scheduling {
  id                  Int      @id @default(autoincrement())
  user                User     @relation(fields: [userId], references: [id])
  userId              Int
  vehicle             Vehicle  @relation(fields: [vehicleId], references: [id])
  vehicleId           Int
  activity            Activity @relation(fields: [activityId], references: [id])
  activityId          Int
  toDate              DateTime
  finished            Boolean? @default(false)
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  @@map("schedules")
}